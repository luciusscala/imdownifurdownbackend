# Travel Data Parser API Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API Configuration
# =============================================================================
API_TITLE="Travel Data Parser API"
API_VERSION="1.0.0"
API_HOST="0.0.0.0"
API_PORT=8000  # Valid range: 1-65535

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Development: Include localhost origins
# Production: Include only your production domains
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# =============================================================================
# Request Configuration
# =============================================================================
REQUEST_TIMEOUT=60  # Request timeout in seconds (10-300)
RATE_LIMIT_PER_MINUTE=100  # Rate limit per IP per minute (1-10000)

# =============================================================================
# Cache Configuration (Cost Optimization)
# =============================================================================
CACHE_TTL=3600  # Cache TTL in seconds (60-86400, default: 1 hour)
ENABLE_CACHE=true  # Enable/disable caching to reduce LLM API costs
CACHE_MAX_SIZE=1000  # Maximum number of cache entries (10-100000)

# =============================================================================
# Logging Configuration
# =============================================================================
# Valid levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG or INFO
# Production: INFO or WARNING (avoid DEBUG for security)
LOG_LEVEL="INFO"

# =============================================================================
# External API Keys (REQUIRED)
# =============================================================================
# Anthropic Claude API key for LLM data extraction
# Get your API key from: https://console.anthropic.com/
# Format: Must start with 'sk-ant-' and be at least 50 characters
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# =============================================================================
# Web Scraping Configuration
# =============================================================================
ENABLE_SELENIUM=false  # Enable Selenium for JavaScript-heavy sites
USER_AGENT_ROTATION=true  # Rotate User-Agent headers to avoid detection

# =============================================================================
# Environment Configuration
# =============================================================================
# Valid environments: development, staging, production
# This affects logging, API documentation, and security settings
ENVIRONMENT="development"

# =============================================================================
# Environment-Specific Notes
# =============================================================================
# DEVELOPMENT:
#   - API docs enabled at root endpoint
#   - Debug logging allowed
#   - Permissive CORS settings
#   - Detailed error messages
#
# STAGING:
#   - API docs enabled for testing
#   - Production-like settings
#   - Moderate logging
#
# PRODUCTION:
#   - API docs disabled for security
#   - Minimal logging (INFO/WARNING)
#   - Strict CORS settings
#   - Generic error messages
#   - Performance optimizations enabled

# =============================================================================
# Security Considerations
# =============================================================================
# 1. Never commit .env files with real API keys to version control
# 2. Use strong, unique API keys for each environment
# 3. Regularly rotate API keys
# 4. Monitor API usage and costs
# 5. Set appropriate CORS origins for your environment
# 6. Use appropriate log levels to avoid exposing sensitive data